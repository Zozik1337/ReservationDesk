extends panel-layout

mixin modal(title,id)
    div(tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-keyboard="false" data-bs-backdrop="static").modal.fade#exampleModal
        div(role="document").modal-dialog
            .modal-content
                .modal-header
                    h5.modal-title#pierwszyModalLabel DostÄ™pne terminy
                    button(type="button" onclick="closeModal()" data-bs-dismiss="modal" aria-label="Close").btn.btn-primary.btn-block.close
                        span(aria-hidden="true") &times;
                .modal-body
                    .popup#popup
                    .container-fluid#main
                        .row#calendarHeader.justify-content-md-center
                            .col-md-1.buttonPadding
                                button(onclick="prevPage()" style="display: none").btn.btn-primary.btn-block#prev Prev
                            .col-md-5#actualMonth
                            .col-md-1.buttonPadding
                                button(onclick="nextPage()").btn.btn-primary.btn-block#next Next
                        .row.justify-content-md-center
                            .col-md-1.day.weed420
                                p Pon.
                            .col-md-1.day.weed420
                                p Wt.
                            .col-md-1.day.weed420
                                p Sr.
                            .col-md-1.day.weed420
                                p Czw.
                            .col-md-1.day.weed420
                                p Pt.
                            .col-md-1.day.weed420
                                p Sb.
                            .col-md-1.day.weed420
                                p Nd.  
                        .row#one.justify-content-md-center
                        .row#two.justify-content-md-center
                        .row#three.justify-content-md-center
                        .row#four.justify-content-md-center
                        .row#five.justify-content-md-center
                        .row#six.justify-content-md-center
                .modal-footer
                    span#whoreserved Test Test
                    button(type="button" onclick="closeModal()" class="btn btn-secondary" data-bs-dismiss="modal") Close
                    button(type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="saveReservation()") Rezerwuj


mixin modalreservation()
